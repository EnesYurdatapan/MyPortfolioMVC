@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Portfolios</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Portfolio updating page</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="PortfolioId" />
							<label>Portfolio Title</label>
							<input type="text" asp-for="Title" class="form-control" />

							<br />

							<label>Portfolio SubTitle</label>
							<input type="text" asp-for="SubTitle" class="form-control" />

							<br />

							<label>Url</label>
							<input type="text" asp-for="Url" class="form-control" />

							<br />

							<label>ImageUrl</label>
							<input type="text" rows="4" type="text" asp-for="ImageUrl" class="form-control"></input>

							<br />

							<label>Description</label>
							<textarea rows="4" type="text" asp-for="Description" class="form-control"></textarea>

							<br />

							<button class="btn btn-warning">Update Portfolio</button>
						</form>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

