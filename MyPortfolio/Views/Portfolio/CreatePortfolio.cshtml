@model Portfolio
@{
    ViewData["Title"] = "CreatePortfolio";
    Layout = "~/Views/Layout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Portfolio</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Portfolios adding page</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <label>Portfolio Title </label>
                            <input type="text" asp-for="Title" class="form-control" />

                            <br />

                            <label>Portfolio SubTitle</label>
                            <input type="text" asp-for="SubTitle" class="form-control" />

                            <br />

                            <label>Url</label>
                            <input type="text" asp-for="Url" class="form-control" />

                            <br />

                            <label>ImageUrl</label>
                            <input type="text" asp-for="ImageUrl" class="form-control"></input>

                            <br />

                            <label>Description</label>
                            <input type="text" asp-for="Description" class="form-control"></input>
                            <br />

                            <button class="btn btn-primary">Add Portfolio</button>
                        </form>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div> 