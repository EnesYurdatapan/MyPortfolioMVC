@model About
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">About</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">About Details</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Başlık : <b>@Model.Title</b>
							<br />
							Kısa Açıklama :<b>@Model.SubDescription</b>
							<br />
							Detaylı Açıklama : <b style="white-space: pre-wrap;">@Model.Details</b>
							<br />
							<td><a href="/About/UpdateAbout/@Model.AboutId" class="btn btn-primary">Update</a></td>

						</div>


					</div>
				</div>


			</div>

		</div>
	</div>
</div>


