@model About
@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/Layout/Index.cshtml";
}
<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">About</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">About updating page</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="AboutId" />
							<label>Title</label>
							<input type="text" asp-for="Title" class="form-control" />

							<br />

							<label>Sub Description</label>
							<input type="text" asp-for="SubDescription" class="form-control" />

							<br />

							<label>Details</label>
							<textarea asp-for="Details" class="form-control"></textarea>

							<br />

							<button class="btn btn-warning">Update Experience</button>
						</form>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>
